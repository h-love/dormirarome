<div id="respond" class="p-formComment">
  <form id="commentform" class="p-formComment__ctt" method="post" action="{{ site.wp_link }}/wp-comments-post.php">
    {% if user %}
      <input type="hidden" name="author" value="{{ user.name }}">
      <input type="hidden" name="email" value="{{ user.email }}">
    {% else %}

      {# Name input field #}
      <div class="p-formComment__ctt__field">
        <label class="p-formComment__ctt__field__label" for="author">Nom<span class="required">*</span></label>
        <div class="p-formComment__ctt__field__control">
          <input class="input" type="text" id="author" name="author" required>
        </div>
      </div>

      {# Email input field #}
      <div class="p-formComment__ctt__field">
        <label class="p-formComment__ctt__field__label" for="email">E-mail<span class="required">*</span></label>
        <div class="p-formComment__ctt__field__control">
          <input class="input" type="email" id="email" name="email" required>
        </div>
      </div>
    {% endif %}

    {# Comment input field #}
    <div class="p-formComment__ctt__field">
      <label class="p-formComment__ctt__field__label" for="comment">Avis</label>
      <div class="p-formComment__ctt__field__control">
        <textarea
          class="p-formComment__ctt__field__control__textarea"
          id="comment"
          name="comment"
          placeholder="Ecrivez votre avis ici..."></textarea>
      </div>
    </div>

    <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
    <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

    {# Form Buttons #}
    <div class="field is-grouped">
      <p class="p-formComment__ctt__field__control">
        <input type="submit" name="Submit" class="p-btn" value="Laisser votre avis"/>
      </p>
      <p class="p-formComment__ctt__field__control">
        {{ cancel_link }}
      </p>
    </div>
  </form>
</div>
